<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Bizznest" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/burnt</item>
        <item name="colorPrimaryVariant">@color/ochre</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/burnt</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Bizznest" parent="Base.Theme.Bizznest" />

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>